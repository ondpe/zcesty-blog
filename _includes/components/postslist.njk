<section>
  {% for post in postlist %}
    <article>
      {% if post.data.hero %}
        <img src="{{ post.data.hero | url }}" alt="Hero obrázek" style="max-width:100%; height:auto; margin-bottom: 0.5em;" />
      {% endif %}

      <h3>
        <a href="{{ post.url | url }}">
          {{ post.data.title or "Bez názvu" }}
        </a>
      </h3>

      {% if post.data.summary %}
        <p>{{ post.data.summary }}</p>
      {% endif %}

      <p>
        <time datetime="{{ post.date }}">
          <small>{{ post.date | czDate }}</small>
        </time>
      </p>

      {% if post.data.tags %}
        <p>
          {% for tag in post.data.tags %}
            {% if tag != "post" %}
              <a href="/tags/{{ tag | slug }}/" rel="tag">{{ tag }}</a>
            {% endif %}
          {% endfor %}
        </p>
      {% endif %}
    </article>
  {% endfor %}
</section>


