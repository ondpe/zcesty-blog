---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | czDate }}</time>
    </small>
  </p>

  <div class="gallery">
    {{ layoutContent | safe }}
  </div>

<hr />

<nav class="post-nav" style="display: flex; justify-content: space-between; align-items: center;">
  {% set posts = collections.postsAll %}
  {% set currentIndex = 0 %}
  {% for post in posts %}
    {% if post.url == page.url %}
      {% set currentIndex = loop.index0 %}
    {% endif %}
  {% endfor %}

  <div>
    {% if posts[currentIndex - 1] %}
      <a href="{{ posts[currentIndex - 1].url }}">← {{ posts[currentIndex - 1].data.title }}</a>
    {% endif %}
  </div>
  <div>
    {% if posts[currentIndex + 1] %}
      <a href="{{ posts[currentIndex + 1].url }}">{{ posts[currentIndex + 1].data.title }} →</a>
    {% endif %}
  </div>
</nav>

<hr />
</article>